@model IEnumerable<ElectionWeb.Models.ViewModels.ResultViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutStar.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Upload Result</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Polling Unit
            </th>
            <th>
                Ward
            </th>
            <th>
               Total Votes
            </th>
            <th>
                Total Parties
            </th>
            <th>
                Uploaded By
            </th>
            <th>
               Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PollingUnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalVoteCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalParties)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
