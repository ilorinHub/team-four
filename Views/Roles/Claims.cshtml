@model ElectionWeb.Models.ViewModels.RoleClaimsViewModel

@{
	ViewData["Title"] = "Claims";
	Layout = "~/Views/Shared/_LayoutStar.cshtml";
}

<div class="row">
	<div class="col-md-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">@Model.Rolename's Claims</h4>



				<form method="POST">

					<div class="row">
						<div class="col-sm-4">


							<div class="card-body">
								<div class="row">
									<div class="col-sm-12 col-lg-8">
										<input hidden asp-for="@Model.Rolename" />
										<input hidden asp-for="@Model.RoleId" />
										@for (var i = 0; i < Model.Claims.Count; i++)
										{
											<div class="form-group">
												<div class="m-2 form-check">
													<input asp-for="@Model.Claims[i].ClaimName" hidden />
													<input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
													<label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
														@Model.Claims[i].ClaimName
													</label>
												</div>
											</div>
										}
										<div class="form-group">
											<div class="row">
												<div class="form-group">
													<input type="submit" value="Add Claims To Role" id="AddToCart" class="btn btn-primary" />
												</div>
											</div>
										</div>
									</div>

								</div>

							</div>

						</div>

					</div>


				</form>


			</div>
		</div>
	</div>
</div>
